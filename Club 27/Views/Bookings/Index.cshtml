@model IEnumerable<Club_27.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>Booking ID</th>
                <th>Venue</th>
                <th>Activity</th>
                <th>BookedOn</th>
                <th>Fixture</th>
                <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.ID</td>
            <td>@item.Venue.VenueName</td>
            <td>@item.Activity.ActivityName</td>
            <td>@item.BookedOn</td>
            <td>@item.Fixture</td>
            <td>
                <a asp-controller="Bookings" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-controller="Bookings" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
